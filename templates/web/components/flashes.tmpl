{{ define "flashes" }}

<div class="flash-message">
		{{ range . }} 
		{{ if eq .Type 0 }}
		<div class="notification is-error">
		{{ else if eq .Type 1 }}
		<div class="notification is-warning">
		{{ else if eq .Type 2 }}
		<div class="notification is-info">
		{{ else if eq .Type 3 }}
		<div class="notification is-success">
		{{ end }}
			<button class="delete"></button>
			{{ .Message }}
		</div>
		{{ end }}
</div>

{{ end }}
