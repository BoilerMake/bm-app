{{ define "login" }}
{{ template "header" . }}

{{ template "navbar" . }}

{{ template "flashes" .Flashes }}

<section class="section bmvii-form" style='background-image: url({{ static_path "bmvii_application_background.svg" }})'>
	<div class="container">
		<div class="columns is-centered content">
			<div class="column box is-5-tablet is-4-desktop">
				<form action="" method="post">
					<h2>Login</h2>

					<div class="field">
						<label for="email" class="label">Email</label>
						<div class="control">
							<input type="email" name="email" placeholder="you@school.edu" class="input" required>
						</div>
					</div>

					<div class="field">
						<div class="level" style="margin-bottom: 0.5em;">
							<label for="password" class="label level-left is-marginless">Password</label>
							<a class="btn btn-link level-right" href="/forgot">Forgot Password?</a>
						</div>
						<div class="control">
							<input type="password" name="password" placeholder="********" class="input" required>
						</div>
					</div>


					<div class="field ">
						<div class="control has-text-centered">
							<button class="button is-red is-fullwidth" type="submit">Login</button>
						</div>
					</div>

					<div class="has-text-centered">
						<a class="btn btn-link" href="/signup">Don't have an account? Sign up here</a>
					</div>
				</form>
			</div>
		</div>
	</div>
</section>

{{ template "footer" . }}
{{ end }}
