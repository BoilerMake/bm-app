{{ define "exec" }}
{{ template "head" . }}

{{ template "navbar" . }}

{{ template "flashes" .Flashes }}

<section class="section bmvii-form" style='background-image: url({{ static_path "bmvii_application_background.svg" }})'>
	<div class="container">
		<div class="columns is-one-third content">
			<div class="column box is-5-tablet is-8-desktop">
				<h2>Announcements</h2>
				<form action="/announcement" method="post">
					<div class="field">
						<label for="message" class="label">Message</label>
						<div class="control">
							<textarea type="text" name="message" placeholder="What you want to say..." class="textarea" maxlength="512" required></textarea>
						</div>
					</div>


					<div class="field ">
						<div class="control has-text-centered">
							<button class="button is-red is-fullwidth" type="submit">Make Announcement</button>
						</div>
					</div>

          <hr/>

          <div class="column is-7">
            <h3 class="subtitle">Users: {{.Data.UserCount}}</h3>
            <h3 class="subtitle">Apps: {{.Data.ApplicationCount}}</h3>
          </div>

				</form>
      </div>
		</div>
	</div>
	<div class="container">
        <div class="columns is-one-third content">
            <div class="column box is-5-tablet is-8-desktop">
                <h2>Create Raffle</h2>
                <form action="/announcement" method="post"> {{/* TODO: CHANGE ACTION PARAMETER */}}
                    <div class="field">
                        <label for="code" class="label">Raffle Code</label>
                        <div class="control">
                            <input class="input" type="text" placeholder="Create Raffle Code">
                        </div>
                    </div>
                    <div class="field">
                        <label for="starttime" class="label">Start Time For Raffle</label>
                        <div class="control">
                            <input class="input" type="text" placeholder="MM/DD/YYYY HH:MM:SS">
                        </div>
                    </div>
                    <div class="field">
                        <label for="endtime" class="label">End Time For Raffle</label>
                        <div class="control">
                            <input class="input" type="text" placeholder="MM/DD/YYYY HH:MM:SS">
                        </div>
                    </div>
                    <div class="field">
                        <label for="points" class="label">Raffle Points</label>
                        <div class="control">
                            <input class="input" type="text" placeholder="Ex: 30">
                        </div>
                    </div>
                    <div class="field ">
                        <div class="control has-text-centered">
                            <button class="button is-red is-fullwidth" type="submit">Create Raffle</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="container">
            <div class="columns is-one-third content">
                <div class="column box is-5-tablet is-8-desktop">
                    <h2>Add Points</h2>
                    <form action="/announcement" method="post"> {{/* TODO: CHANGE ACTION PARAMETER*/}}
                        <div class="field">
                            <label for="code" class="label">Raffle Code</label>
                            <div class="control">
                                <input class="input" type="text" placeholder="Hacker's email">
                            </div>
                        </div>
                        <div class="field">
                            <label for="points" class="label">Raffle Points To Add</label>
                            <div class="control">
                                <input class="input" type="text" placeholder="Ex: 30">
                            </div>
                        </div>
                        <div class="field ">
                            <div class="control has-text-centered">
                                <button class="button is-red is-fullwidth" type="submit">Create Raffle</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
</section>

{{ template "footer" . }}
{{ end }}
